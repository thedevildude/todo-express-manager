<% let overdue = 0;
let dueToday = 0;
let dueLater = 0;
const oldDate = new Date();
const date = new Date(oldDate.toDateString()).getTime();
for(let i=0; i < allTodos.length; i++) {
  const oldTodoDate = new Date(allTodos[i].dueDate);
  const todoDate = new Date(oldTodoDate.toDateString()).getTime();
  if(todoDate < date) overdue++;
  else if (todoDate == date) dueToday++;
  else dueLater++;
} %>
<div>
  <div class="flex items-center">
    <h5 class="font-bold text-xl">Overdue</h5>
    <p id="count-overdue" class="ml-2 border rounded bg-gray-300 px-3 font-semibold text-base"><%= overdue %></p>
  </div>
  <ul class="list-none">
    <% for(let i=0; i< allTodos.length; i++) {
      const oldDate = new Date();
      const date = new Date(oldDate.toDateString()).getTime();
      const oldTodoDate = new Date(allTodos[i].dueDate);
      const todoDate = new Date(oldTodoDate.toDateString()).getTime();
      if(todoDate < date) { %>
    <li class="Todo-Item">
      <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50">
        <input type="checkbox" id="overdue-checkbox-<%= i+1 %>" class="w-4 h-4 text-blue-600 bg-gray-100 border rounded">
        <label for="overdue-checkbox-<%= i+1 %>" class="ml-2 text-sm text-gray-600 cursor-pointer"><%= allTodos[i].title %></label>
        <a href="#" class="ml-2 hidden thrash-icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
        </a>
      </div>
    </li>
    <% }} %>
  </ul>
  <div class="flex items-center">
    <h5 class="font-bold text-xl">Due Today</h5>
    <p id="count-due-today" class="ml-2 border rounded bg-gray-300 px-3 font-semibold text-base"><%= dueToday %></p>
  </div>
  <ul class="list-none">
    <% for(let i=0; i< allTodos.length; i++) {
      const oldDate = new Date();
      const date = new Date(oldDate.toDateString()).getTime();
      const oldTodoDate = new Date(allTodos[i].dueDate);
      const todoDate = new Date(oldTodoDate.toDateString()).getTime();
      if(todoDate == date) { %>
    <li class="Todo-Item">
      <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50">
        <input type="checkbox" id="due-today-checkbox-<%= i+1 %>" class="w-4 h-4 text-blue-600 bg-gray-100 border rounded">
        <label for="due-today-checkbox-<%= i+1 %>" class="ml-2 text-sm text-gray-600 cursor-pointer"><%= allTodos[i].title %></label>
